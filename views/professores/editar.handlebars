<div class="card">
  <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
    <h5><i class="fas fa-edit"></i> Editar Professor</h5>
    <a href="/professores" class="btn btn-light btn-sm">Voltar</a>
  </div>
  <div class="card-body">
    <form action="/professores/editar/{{professor.id}}?_method=PUT" method="POST">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="nome" class="form-label">Nome</label>
          <input type="text" class="form-control" id="nome" name="nome" value="{{professor.nome}}" required>
        </div>
        <div class="col-md-6 mb-3">
          <label for="matricula" class="form-label">Matr√≠cula</label>
          <input type="text" class="form-control" id="matricula" name="matricula" value="{{professor.matricula}}" required>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="{{professor.email}}" required>
        </div>
      
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="senha" class="form-label">Nova Senha (deixe em branco para manter a atual)</label>
          <input type="password" class="form-control" id="senha" name="senha" placeholder="Nova senha">
        </div>
        <div class="col-md-6 mb-3">
          <label for="status" class="form-label">Status</label>
          <select class="form-select" id="status" name="status" required>
            <option value="ativo" {{#if (eq professor.status "ativo")}}selected{{/if}}>Ativo</option>
            <option value="inativo" {{#if (eq professor.status "inativo")}}selected{{/if}}>Inativo</option>
          </select>
        </div>
      </div>
      
      <div class="mb-3">
        <label for="DepartamentoId" class="form-label">Departamento</label>
        <select class="form-select" id="DepartamentoId" name="DepartamentoId" required>
          {{#each departamentos}}
            <option value="{{id}}" {{#if (eq ../professor.DepartamentoId id)}}selected{{/if}}>{{nome}}</option>
          {{/each}}
        </select>
      </div>
      
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-warning">
          <i class="fas fa-save"></i> Atualizar
        </button>
      </div>
    </form>
  </div>
</div>