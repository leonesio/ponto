<div class="card">
  <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
    <h5><i class="fas fa-edit"></i> Editar Departamento</h5>
    <a href="/departamentos" class="btn btn-light btn-sm">Voltar</a>
  </div>
  <div class="card-body">
    <form action="/departamentos/editar/{{departamento.id}}?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="{{departamento.nome}}" required>
      </div>
      
      <div class="mb-3">
        <label for="descricao" class="form-label">Descrição</label>
        <textarea class="form-control" id="descricao" name="descricao" rows="3">{{departamento.descricao}}</textarea>
      </div>
      
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-warning">
          <i class="fas fa-save"></i> Atualizar
        </button>
      </div>
    </form>
  </div>
</div>